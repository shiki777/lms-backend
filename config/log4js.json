{
  "appenders": [
    {
      "type": "clustered",
      "appenders": [
        {
          "type": "file",
          "filename": "logs/app.log",
          "maxLogSize": 10485760,
          "numBackups": 3
        },
        {
          "type": "logLevelFilter",
          "level": "ERROR",
          "appender": {
            "type": "file",
            "filename": "logs/errors.log"
          }
        }
      ]
    }
  ]
}
